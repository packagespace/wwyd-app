<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @problem %>

    <% unless @solved.nil? %>

      <p id="solved-message">
        <% if @solved %>
          Correct answer!
        <% else %>
          Incorrect answer
        <% end %>
      </p>

      <p id="solution" class="my-5">
        <strong class="block font-medium mb-1">Solution:</strong>
        <%= display_tiles(@problem.solution, 'w-10') %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Explanation:</strong>
        <%= display_tiles(@problem.explanation, 'w-7') %>
      </p>

    <% end %>

    <%= link_to "Edit this problem", edit_problem_path(@problem), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to problems", problems_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
