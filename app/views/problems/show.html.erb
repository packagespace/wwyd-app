<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <div id="<%= dom_id @problem %>">
      <p class="my-5">
        <strong class="text-center block font-medium mb-1"><%= @problem.title %></strong>
      </p>

      <div class="flex flex-initial mx-auto gap-0.5">
        <%= display_clickable_tiles(@problem.tiles, ' hover:bottom-5 relative ', @problem) %>
      </div>

    </div>

    <% unless @solved.nil? %>

      <div class="text-center bg-gray-200 rounded-lg w-1/2 mx-auto">
        <p id="solved-message">
          <% if @solved %>
            Correct answer!
          <% else %>
            Incorrect answer
          <% end %>
        </p>
      </div>
      <div class="my-5">
        <strong class="block font-medium mb-1">Solution:</strong>
        <p id="solution">
        <%= display_tiles(@problem.solution_tiles, 'w-10') %>
        </p>
      </div>

      <p id="explanation" class="my-5">
        <strong class="block font-medium mb-1">Explanation:</strong>
        <%= display_tiles(@problem.explanation, 'w-7') %>
      </p>

    <% end %>

    <%= link_to "Edit this problem", edit_problem_path(@problem), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to problems", problems_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
